---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "HabitatRoot - Storytelling and Postural Awareness Courses" } = Astro.props;

// Import CSS
import '../styles/tailwind.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="author" content="HabitatRoot" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <title>{title}</title>

    <!-- Import fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Merriweather:wght@300;400;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <!-- Navigation matching reference site -->
    <nav class="border-b border-gray-200">
      <div class="container-site">
        <div class="flex justify-between items-center py-4">
          <div>
            <a href="/" class="text-lg font-serif text-gray-900">HabitatRoot</a>
          </div>
          <div class="hidden md:flex items-center space-x-8">
            <a href="#program" class="nav-link">Program</a>
            <a href="#location" class="nav-link">Location</a>
            <a href="#pricing" class="nav-link">Pricing</a>
            <a href="#register" class="nav-link font-medium">Book now</a>
          </div>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <!-- Footer matching reference site -->
    <footer class="border-t border-gray-200 mt-16">
      <div class="container-site">
        <div class="py-8">
          <div class="flex justify-between items-center text-sm text-gray-600">
            <div class="flex space-x-6">
              <a href="#program" class="hover:text-gray-900">Program</a>
              <a href="#location" class="hover:text-gray-900">Location</a>
              <a href="#pricing" class="hover:text-gray-900">Pricing</a>
              <a href="#register" class="hover:text-gray-900">Book now</a>
            </div>
            <div class="flex items-center space-x-4">
              <a href="#" class="hover:text-gray-900">Instagram</a>
              <span>&copy; 2025</span>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
